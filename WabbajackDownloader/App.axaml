<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="WabbajackDownloader.App"
             xmlns:local="using:WabbajackDownloader"
             xmlns:clr="using:System"
             RequestedThemeVariant="Light">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
  
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>

  <Application.Resources>
    <FontFamily x:Key="BannerFont">
      /Assets/MountainKingRegular.ttf#Mountain King
    </FontFamily>
    <SolidColorBrush x:Key="MainColor"
                     Color="DarkViolet"/>
    <SolidColorBrush x:Key="BackgroundColor"
                     Color="Transparent"/>
    <SolidColorBrush x:Key="HighlightColor" 
                     Color="#a955df" Opacity="98"/>
    <SolidColorBrush x:Key="WindowBackgroundColor"
                     Color="#f2f9ff" Opacity="90"/>
  </Application.Resources>
</Application>